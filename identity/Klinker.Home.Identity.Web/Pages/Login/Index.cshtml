@page
@model Klinker.Home.Identity.Web.Pages.Login

<form method="post">
    <label asp-for="ViewModel.Username">Username</label>
    <input type="text" asp-for="ViewModel.Username" required="required"/>
    
    <label asp-for="ViewModel.Password">Password</label>
    <input type="password" asp-for="ViewModel.Password" required="required"/>
    
    <button type="submit">Login</button>
</form>